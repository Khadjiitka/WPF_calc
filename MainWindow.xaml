<Window x:Class="WPF_calcul.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_calcul"
        mc:Ignorable="d"
        Title="Calculator" Height="350" Width="500">
    <Grid x:Name="MainRoot" Background="White">

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
          
            <ColumnDefinition />
            <ColumnDefinition />
          
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="1"  HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="textLabel" FontSize="30"/>
        <Button Grid.Column="0" Grid.Row="1" Background="DimGray"  FontSize="30" >1</Button>
        <Button Grid.Column="1" Grid.Row="1" Background="DimGray"  FontSize="30" >2</Button>
        <Button Grid.Column="2" Grid.Row="1" Background="DimGray"  FontSize="30" >3</Button>
        <Button Grid.Column="0" Grid.Row="2" Background="DimGray"  FontSize="30" >4</Button>
        <Button Grid.Column="1" Grid.Row="2" Background="DimGray"  FontSize="30" >5</Button>
        <Button Grid.Column="2" Grid.Row="2" Background="DimGray"  FontSize="30" >6</Button>
        <Button Grid.Column="0" Grid.Row="3" Background="DimGray"  FontSize="30" >7</Button>
        <Button Grid.Column="1" Grid.Row="3" Background="DimGray"  FontSize="30" >8</Button>
        <Button Grid.Column="2" Grid.Row="3" Background="DimGray"  FontSize="30" >9</Button>
        <Button Grid.Column="1" Grid.Row="4" Background="DimGray"  FontSize="30" >0</Button>
        <Button Grid.Column="4" Grid.Row="1" Background="Gray"  FontSize="30" >+</Button>
        <Button Grid.Column="4" Grid.Row="2" Background="Gray"  FontSize="30" >-</Button>
        <Button Grid.Column="4" Grid.Row="3" Background="Gray"  FontSize="30" >*</Button>
        <Button Grid.Column="4" Grid.Row="4" Background="Gray"  FontSize="30">/</Button>
        <Button Grid.Column="2" Grid.Row="4" Background="Gray"  FontSize="30">=</Button>
        <Button Grid.Column="0" Grid.Row="4" Background = "Salmon" FontSize="30">AC</Button>


    </Grid>
    
</Window>
